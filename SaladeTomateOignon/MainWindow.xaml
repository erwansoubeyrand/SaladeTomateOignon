<Window x:Class="SaladeTomateOignon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="STO" Height="720" Width="827"
        ResizeMode="NoResize">

    <Grid Loaded="OnLoaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="15px" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15px" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GridSplitter
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Background="#FF2D2D2D"
            ShowsPreview="true"
            Width="auto"
            Height="2" />

        <GridSplitter
            Grid.Row="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Background="#FF2D2D2D"
            ShowsPreview="true"
            Width="auto"
            Height="2" />
        <Label Grid.Row="0" Content="Salade Tomate Oignon" HorizontalAlignment="Center" VerticalAlignment="Top"
               FontSize="25" FontFamily="Times New Roman" />
        <Button Grid.Row="0" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Center" Height="35"
                Width="66" Name="StartButton" Click="StartButton_Click" Margin="738,0,0,0" />

        <Grid Width="auto" Height="auto" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26" />
                <RowDefinition Height="26   " />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="250px" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" Content="God Mode" Name="GodModeCheckBox" HorizontalAlignment="Left"
                      VerticalAlignment="Center" Checked="GodModeEnable" Unchecked="GodModeDisable" Height="22"
                      Margin="10,0,0,0" IsEnabled="False" />
            <CheckBox Grid.Row="1" Grid.Column="0" Content="Speed Hack" Name="SpeedHackCheckBox"
                      HorizontalAlignment="Left" VerticalAlignment="Center" Checked="SpeedHackEnabled"
                      Unchecked="SpeedHackDisable" Height="23" Margin="10,0,0,0" IsEnabled="False" />
            <Slider Grid.Row="1" Grid.Column="1" Name="SpeedHackValueSlider" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Width="120" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"
                    Maximum="10" Minimum="1" Height="22" Background="{x:Null}" Orientation="Horizontal"
                    TickPlacement="None" />
            <CheckBox Grid.Row="2" Grid.Column="0" Content="Infinite Money  " Name="MoneyHackCheckBox"
                      HorizontalAlignment="Left" Width="101" Checked="InfiniteMoneyHack"
                      Unchecked="InfiniteMoneyDisable" Height="23" Margin="10,1,0,2" IsEnabled="False" />
            <CheckBox Grid.Row="3" Grid.Column="0" Content="Infinite Ammo" Name="InfiniteAmmoCheckBox"
                      HorizontalAlignment="Left" VerticalAlignment="Center" Width="101" Checked="InfiniteAmmoEnable"
                      Unchecked="InfiniteAmmoDisable" Height="23" Margin="10,0,0,0" IsEnabled="False" />
            <CheckBox Grid.Row="6" Grid.Column="0" Content="Rapid Fire" Name="RapidFireCheckBox"
                      HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"
                      Checked="RapidFireEnabled" Unchecked="RapidFireDisable" IsEnabled="False" />
            <CheckBox Grid.Row="7" Grid.Column="0" Content="Always Crit / Headshot Only" Name="AlwaysCritCheckBox"
                      HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,0,0,0"
                      Checked="HeadShotOnlyEnabled" Unchecked="HeadShotOnlyDisable" IsEnabled="False" />
            <CheckBox x:Name="ThermalVisonCheckBox" Grid.Row="8" Grid.Column="0" Content="Thermal Vision"
                      HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,0,0,0"
                      Checked="InfraredEnable" Unchecked="InfraredDisable" IsEnabled="False" />
            <CheckBox x:Name="AutoSwitchWeaponCheckBox" Grid.Row="9" Grid.Column="0"
                      Content="Auto Switch Weapon. (Not Implemented)" HorizontalAlignment="Left"
                      VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="10,0,0,0" IsEnabled="False" />
            <Button Grid.Row="1" Grid.Column="3" Height="25px" Width="100px" Content="Set Weapon"
                    HorizontalAlignment="Left" VerticalAlignment="Top" Name="ChangeWeaponButton"
                    Click="ChangeWeaponButton_Click" IsEnabled="False" />
            <ComboBox Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"
                      Margin="127,0,0,0" Name="WeaponIdComboBox" />
            <Label Grid.Row="2" Grid.Column="3" Content="Weapon: MyWeapon" Grid.ColumnSpan="2" Name="MyWeaponLabel" />
        </Grid>

        <Grid Width="auto" Height="auto" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Column="0" Content="Instant Kill (1hp zombies)" x:Name="InstantKillCheckBox"
                      HorizontalAlignment="Left" VerticalAlignment="Center" Checked="InstantKillEnable"
                      Unchecked="InstantKillDisable" Height="23" Margin="10,0,0,0" IsEnabled="False" />
            <CheckBox Grid.Row="1" Grid.Column="0" Content="Teleport Zombies Too Crosshair"
                      Name="TeleportZombieCheckBox" HorizontalAlignment="Left" VerticalAlignment="Center"
                      Checked="TeleportZombiesEnabled" Unchecked="TeleportZombiesDisable" Height="23" Margin="10,0,0,0"
                      IsEnabled="False" />
            <CheckBox Grid.Row="2" Grid.Column="0" Content="Teleport Zombies Too Position"
                      Name="TeleportZombiePositionCheckBox" HorizontalAlignment="Left" VerticalAlignment="Center"
                      Checked="TeleportZombiesPosEnabled" Unchecked="TeleportZombiesPosDisabled" Height="23"
                      Margin="10,0,0,0" IsEnabled="False" />
            <Button x:Name="SetPositionbutton" Grid.Row="2" Grid.Column="1" Height="25px" Width="100px"
                    Content="Set Position" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"
                    Click="SetPosition" IsEnabled="False" />
            <Label Grid.Row="2" Grid.Column="2" Name="PositionLabel" Content="Set Position: [0,0,0]" />
        </Grid>

        <Grid Width="auto" Height="130px" Grid.Row="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <CheckBox Grid.Row="0" Grid.Column="0" Content="XP Modifier" Name="XpModiferCheckBox"
                      HorizontalAlignment="Center" VerticalAlignment="Center" Unchecked="XpModiferDisabled"
                      IsEnabled="False" />
            <Slider Grid.Row="1" Grid.Column="0" Name="XpModiferSlider" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Width="700" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"
                    Maximum="1000" Minimum="1" Height="22" Orientation="Horizontal" TickPlacement="None"
                    Thumb.DragCompleted="XpModiferEnabled" />

            <CheckBox Grid.Row="2" Grid.Column="0" Content="Weapon XP Modifier" Name="GunXpModiferCheckBox"
                      HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="349,0,0,0"
                      Unchecked="GunXpModiferDisabled" IsEnabled="False" />
            <Slider Grid.Row="3" Grid.Column="0" Name="GunModiferSlider" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Width="700" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"
                    Maximum="1000" Minimum="1" Height="22" Orientation="Horizontal" TickPlacement="None"
                    Thumb.DragCompleted="GunXpModiferEnabled" />

            <CheckBox Grid.Row="4" Grid.Column="0" Content="TimeScale Modifier (Use Me If Retard)"
                      Name="TimeScaleModiferCheckBox" HorizontalAlignment="Left" VerticalAlignment="Center"
                      Grid.ColumnSpan="2" Margin="301,0,0,0" Checked="TimeScaleEnabled" Unchecked="TimeScaleDisabled"
                      IsEnabled="False" />
            <Slider Grid.Row="5" Grid.Column="0" Name="TimeScaleModiferSlider" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Width="700" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"
                    Maximum="10" Minimum="1" Height="22" Orientation="Horizontal" TickPlacement="None" />
        </Grid>

        <Grid Width="auto" Height="225" Grid.Row="6" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Content="Console" HorizontalAlignment="Left" VerticalAlignment="Center"
                   RenderTransformOrigin="-0.678,1.548" />
            <TextBox Grid.Row="1" Name="Console" HorizontalAlignment="Center" VerticalAlignment="Top" Height="181"
                     Width="780" Background="#FF2D2D2D" IsEnabled="False" />
        </Grid>
    </Grid>
</Window>